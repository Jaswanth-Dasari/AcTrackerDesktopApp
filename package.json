{
  "name": "AcTracker",
  "version": "1.0.0",
  "description": "A desktop application to track and manage activities efficiently.",
  "main": "main.mjs",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "concurrently \"npm run start\" \"npm run server\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "node scripts/prepare-config.js && electron-builder --dir",
    "clean": "if exist dist rmdir /s /q dist",
    "predist": "node scripts/clean-dist.js",
    "dist": "node scripts/prepare-config.js && electron-builder --win --x64",
    "mac": "node scripts/prepare-config.js && electron-builder --mac",
    "linux": "node scripts/prepare-config.js && electron-builder --linux",
    "prepare-ffmpeg": "node scripts/prepare-ffmpeg.js",
    "build": "npm run prepare-ffmpeg && electron-builder"
  },
  "keywords": [],
  "author": {
    "name": "Dasari Jaswanth",
    "email": "jaswanthdasari718@gmail.com",
    "url": "https://actracker.onrender.com"
  },
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.717.0",
    "@aws-sdk/s3-request-presigner": "^3.717.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "active-win": "^9.0.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-updater": "^6.3.9",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "gif-encoder-2": "^1.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.16",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.1",
    "sharp": "^0.33.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "rimraf": "^5.0.1"
  },
  "repository": "https://github.com/Jaswanth-Dasari/AcTrackerDesktopApp",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.dasari.actracker",
    "productName": "AcTracker",
    "win": {
      "target": "nsis",
      "icon": "public/AcTracker_Icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage"
    },
    "files": [
      "dist/**/*",
      "node_modules/@ffmpeg-installer/ffmpeg/**/*",
      "public/**/*",
      "main.mjs",
      "preload.js",
      "config.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
        "to": "ffmpeg/ffmpeg.exe",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "config.json",
        "to": "config.json"
      }
    ]
  }
}
